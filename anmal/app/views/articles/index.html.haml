 %div.container
  %div.row.search-bar
   %div{:class => "col s12 m12 l12"}
    = render 'layouts/content_header'
  %div.row
   %div{:class => "col s8 m9 l9 cards"}
    - @articles.each do |article|
     %div.card.hoverable
      %div.card-image
       = image_tag article.image, class: "materialboxed"
       = link_to article_path(article), class: "btn-floating btn-large halfway-fab waves-effect waves-light" do
        %i.material-icons add
      %div.card-content
       %div.card-title
        %span= article.title
       %p
        %i.card-at-time
         %small= time_ago_in_words(article.created_at)
       %p= truncate(article.body, length: 60, omission: "" , escape: false)
      %div.card-action.right-align
       %span.card-author
        %i por #{article.author.name}
   %div{:class => "col s4 m3 l3 offset-s8 offset-m9 offset-l9 center-align"}
    %div.card
     %div.card-title.card-title-ads
      %span Pol√≠cia Militar
     %div.card-content
      = link_to "http://www.pmal.al.gov.br" do
       = image_tag "pmal.png", class: "responsive-img"

