%div{:class => "row login-row"}
 %div{:class =>"col s1 m2 l3"}
 %div{:class =>"col s1 m8 l6 login-box"}
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
   %div.input-field
    = f.input :email, required: false, autofocus: true
   %div.input-field
    = f.input :password, required: false
   %div
    = f.input :remember_me, as: :boolean, boolean_style: :inline, label: t('devise.links.remember_me') if devise_mapping.rememberable?
   %div{:class => "actions right"}
    = f.button :submit, t('devise.links.sign_in'), class: "waves-effect waves-light btn"
 %div{:class =>"col s1 m2 l3"}
